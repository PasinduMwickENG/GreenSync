rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow each authenticated user to read/write only their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Add other rules below as needed for your app
    // Example: allow public read-only access to a 'public' collection
    // match /public/{doc} {
    //   allow read: if true;
    // }
  }
}
